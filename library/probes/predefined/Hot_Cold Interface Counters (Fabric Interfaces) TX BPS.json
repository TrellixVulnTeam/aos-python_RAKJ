{
  "label": "Hot/Cold Interface Counters (Fabric Interfaces) TX BPS",
  "description": "The probe determines hot/cold fabric interface counters",
  "processors": [
    {
      "inputs": {},
      "type": "if_counter",
      "name": "leaf interface traffic",
      "outputs": {
        "out": "leaf_int_traffic"
      },
      "properties": {
        "link_role": "link.role",
        "graph_query": "node(\"system\", name=\"system\", deploy_mode=\"deploy\", role=\"leaf\").out(\"hosted_interfaces\").node(\"interface\", name=\"iface\", if_name=not_none()).out(\"link\").node(\"link\", name=\"link\", link_type=\"ethernet\").in_(\"link\").node(\"interface\").in_(\"hosted_interfaces\").node(\"system\", name=\"dst_system\", deploy_mode=\"deploy\", role=\"spine\")",
        "interface": "iface.if_name",
        "system_id": "system.system_id",
        "enable_streaming": false,
        "counter_type": "tx_bps"
      }
    },
    {
      "inputs": {
        "in": "leaf_int_traffic"
      },
      "type": "accumulate",
      "name": "leaf int traffic accumulate",
      "outputs": {
        "out": "leaf_int_traffic_accumulate"
      },
      "properties": {
        "enable_streaming": false,
        "max_samples": 1024,
        "graph_query": [],
        "total_duration": 60
      }
    },
    {
      "inputs": {
        "in": "leaf_int_traffic"
      },
      "type": "periodic_average",
      "name": "leaf interface tx avg",
      "outputs": {
        "out": "leaf_int_tx_avg"
      },
      "properties": {
        "enable_streaming": false,
        "period": 60,
        "graph_query": []
      }
    },
    {
      "inputs": {
        "in": "leaf_int_tx_avg"
      },
      "type": "sum",
      "name": "interface sum per device",
      "outputs": {
        "out": "if_counter_sum_per_device"
      },
      "properties": {
        "enable_streaming": false,
        "group_by": [
          "system_id"
        ]
      }
    },
    {
      "inputs": {
        "in": "leaf_int_tx_avg"
      },
      "type": "sum",
      "name": "interface sum per device per link role",
      "outputs": {
        "out": "if_counter_sum_per_device_per_role"
      },
      "properties": {
        "enable_streaming": false,
        "group_by": [
          "system_id",
          "link_role"
        ]
      }
    },
    {
      "inputs": {
        "in": "leaf_int_tx_avg"
      },
      "type": "range_check",
      "name": "live leaf interface cold",
      "outputs": {
        "out": "live_leaf_int_cold"
      },
      "properties": {
        "enable_streaming": false,
        "property": "value",
        "range": {
          "max": -1
        },
        "raise_anomaly": false,
        "graph_query": []
      }
    },
    {
      "inputs": {
        "in": "leaf_int_tx_avg"
      },
      "type": "range_check",
      "name": "live leaf interface hot",
      "outputs": {
        "out": "live_leaf_int_hot"
      },
      "properties": {
        "enable_streaming": false,
        "property": "value",
        "range": {
          "min": 11
        },
        "raise_anomaly": false,
        "graph_query": []
      }
    },
    {
      "inputs": {
        "in": "live_leaf_int_cold"
      },
      "type": "time_in_state_check",
      "name": "sustained cold leaf interface",
      "outputs": {
        "out": "cold_leaf_int"
      },
      "properties": {
        "enable_streaming": false,
        "time_window": 60,
        "state_range": {
          "\"true\"": [
            {
              "min": 11
            }
          ]
        },
        "raise_anomaly": true,
        "graph_query": []
      }
    },
    {
      "inputs": {
        "in": "live_leaf_int_hot"
      },
      "type": "time_in_state_check",
      "name": "sustained hot leaf interfaces",
      "outputs": {
        "out": "hot_leaf_int"
      },
      "properties": {
        "enable_streaming": false,
        "time_window": 60,
        "state_range": {
          "\"true\"": [
            {
              "min": 11
            }
          ]
        },
        "raise_anomaly": true,
        "graph_query": []
      }
    },
    {
      "inputs": {
        "in": "cold_leaf_int"
      },
      "type": "accumulate",
      "name": "leaf int cold anomaly history",
      "outputs": {
        "out": "anomaly_cold_int_accumulate"
      },
      "properties": {
        "enable_streaming": false,
        "max_samples": 1024,
        "graph_query": [],
        "total_duration": 0
      }
    },
    {
      "inputs": {
        "in": "hot_leaf_int"
      },
      "type": "accumulate",
      "name": "leaf int hot anomaly history",
      "outputs": {
        "out": "int_hot_accumulate_anomaly"
      },
      "properties": {
        "enable_streaming": false,
        "max_samples": 1024,
        "graph_query": [],
        "total_duration": 0
      }
    },
    {
      "inputs": {
        "in": "cold_leaf_int"
      },
      "type": "match_perc",
      "name": "system percent cold",
      "outputs": {
        "out": "system_perc_cold"
      },
      "properties": {
        "enable_streaming": false,
        "group_by": [
          "system_id"
        ],
        "reference_state": "true"
      }
    },
    {
      "inputs": {
        "in": "hot_leaf_int"
      },
      "type": "match_perc",
      "name": "system percent hot",
      "outputs": {
        "out": "system_perc_hot"
      },
      "properties": {
        "enable_streaming": false,
        "group_by": [
          "system_id"
        ],
        "reference_state": "true"
      }
    },
    {
      "inputs": {
        "in": "system_perc_cold"
      },
      "type": "range_check",
      "name": "device cold",
      "outputs": {
        "out": "device_cold_anomalous"
      },
      "properties": {
        "enable_streaming": false,
        "property": "value",
        "range": {
          "min": 31
        },
        "raise_anomaly": true,
        "graph_query": []
      }
    },
    {
      "inputs": {
        "in": "system_perc_hot"
      },
      "type": "range_check",
      "name": "device hot",
      "outputs": {
        "out": "device_hot_anomalous"
      },
      "properties": {
        "enable_streaming": false,
        "property": "value",
        "range": {
          "min": 31
        },
        "raise_anomaly": true,
        "graph_query": []
      }
    },
    {
      "inputs": {
        "in": "device_cold_anomalous"
      },
      "type": "accumulate",
      "name": "anomaly device cold history",
      "outputs": {
        "out": "device_cold_anomaly_timeseries"
      },
      "properties": {
        "enable_streaming": false,
        "max_samples": 1024,
        "graph_query": [],
        "total_duration": 0
      }
    },
    {
      "inputs": {
        "in": "device_hot_anomalous"
      },
      "type": "accumulate",
      "name": "anomaly device hot history",
      "outputs": {
        "out": "device_hot_anomaly_timeseries"
      },
      "properties": {
        "enable_streaming": false,
        "max_samples": 1024,
        "graph_query": [],
        "total_duration": 0
      }
    }
  ],
  "stages": [
    {
      "name": "leaf_int_tx_avg",
      "units": "bps"
    },
    {
      "name": "leaf_int_traffic",
      "units": "bps"
    },
    {
      "name": "system_perc_hot",
      "units": "%"
    },
    {
      "name": "system_perc_cold",
      "units": "%"
    }
  ]
}